# VaniKeys Environment Configuration
# Copy to .env and fill in actual values

# Application
VANIKEYS_ENV=development  # development|staging|production
VANIKEYS_PORT=8000
VANIKEYS_HOST=0.0.0.0
VANIKEYS_DEBUG=true

# Database (PostgreSQL)
DATABASE_URL=postgresql://vanikeys:password@localhost:5432/vanikeys
DATABASE_POOL_SIZE=20

# Redis (Job Queue & Caching)
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Stripe (Payments)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# GPU Compute (RunPod Serverless)
RUNPOD_API_KEY=your_runpod_api_key
RUNPOD_ENDPOINT_ID=your_endpoint_id

# GPU Compute (Modal - Optional)
MODAL_TOKEN_ID=your_modal_token_id
MODAL_TOKEN_SECRET=your_modal_token_secret

# AI Features (Together.ai)
TOGETHER_API_KEY=your_together_api_key
TOGETHER_MODEL=meta-llama/Llama-3.1-70B-Instruct-Turbo

# Monitoring & Logging
LOG_LEVEL=INFO  # DEBUG|INFO|WARNING|ERROR
STRUCTLOG_JSON=false  # true for production

# Security
SECRET_KEY=your-secret-key-generate-with-secrets-token-hex-32
SESSION_COOKIE_SECURE=false  # true for production
CORS_ORIGINS=http://localhost:8000

# Feature Flags
ENABLE_GACHA_MODE=true
ENABLE_GUARANTEED_MODE=true
ENABLE_AI_FEATURES=true
ENABLE_FREE_DAILY_PULL=true

# Rate Limiting
RATE_LIMIT_PULLS_PER_MINUTE=10
RATE_LIMIT_TOKENS_PER_DAY=1000

# Compute Thresholds
USE_MODAL_ABOVE_DIFFICULTY=1000000000  # Use Modal for very hard patterns
MAX_GACHA_ATTEMPTS=1  # Always 1 for gacha mode
